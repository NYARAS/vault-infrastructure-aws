server:
  dataStorage:
    enabled: true
  standalone:
    enabled: true
  ha:
    enabled: true
    replicas: ${replicas}
    config: |
      ui = true

      listener "tcp" {
        tls_disable = 1
        address = "[::]:8200"
        cluster_address = "[::]:8201"
      }
      storage "consul" {
        path = "vault"
        address = "consul-consul-server.consul:8500"
      }

ui:
  enabled: true
  serviceType: NodePort

csi:
  enabled: true
injector:
  enabled: true
